{
  "name": "@fintrack-ai/core",
  "version": "0.1.0",
  "description": "Core business logic for FinTrack AI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "eval": "tsx eval/run-eval.ts",
    "eval:chinese": "tsx eval/run-eval.ts --tag chinese",
    "eval:voice": "tsx eval/run-eval.ts --tag voice"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
